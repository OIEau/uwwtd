        //delete the duplicate empty menu  'admin/config/uwwtd'
        foreach($listmid as $midtodlete) {
            if ($menu_download_general_conf_plid != '' && $menu_download_general_conf_plid != $midtodlete['mlid']) {
                menu_link_delete($midtodlete['mlid']);  
