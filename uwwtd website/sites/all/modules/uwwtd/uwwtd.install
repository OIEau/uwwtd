            $msg = "Error update field : ".$field_name."\n";
            $msg .= $e->getMessage() . "\n"; 
            uwwtd_install_trace($msg);
            $msg_error .= $msg . "\n";             
        }
    }
  }
  if ('' !== $msg_error) {
      throw new DrupalUpdateException($msg_error);
  }

  variable_set('siif_eru_version', __FUNCTION__);

//   throw new DrupalUpdateException($msg_error);
}
