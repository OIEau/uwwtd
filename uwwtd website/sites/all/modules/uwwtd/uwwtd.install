function uwwtd_install_trace($message) 
{
    $file = drupal_realpath('public://data_errors/install_trace.log');
    $r = fopen($file, 'a');
    fputs($r, date("[Y-m-d H:i:s] ") . $message . "\n");
    fclose($r);
}

