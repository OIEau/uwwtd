            } catch (Exception $e) {
                $msgresult = 'error';
                $msgexception .= 'Error : can\'t create openlayers map ' . $filename . '('.$msgresult.')'."\n";
            }
                        
            uwwtd_install_trace('map ' . $filename . ' result : ' . $msgresult);                                
